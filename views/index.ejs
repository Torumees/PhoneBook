<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://kit.fontawesome.com/3d8af50c2d.js" crossorigin="anonymous"></script>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="css/bs/bootstrap.min.css">
    <link rel="stylesheet" href="css/bs/bootstrap-grid.min.css">
    <!-- Style CSS -->
    <link rel="stylesheet" href="css/style.css">
    <title>PhoneBook App</title>
</head>

<body>
    <div class="container">
        <div class="box" id="heading">
            <h1>Contacts</h1>
        </div>

        <div class="d-flex box">
            <div class="mainView">
                <table class="table" style="width: 50rem;">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">First name</th>
                            <th scope="col">Last name</th>
                            <th scope="col">Phone number</th>
                            <th scope="col">Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(let i = 0; i < contactItems.length; i++) { %>
                        <tr>
                            <th class="row-id" scope="row"><%= i+1 %></th>
                            <td><%= contactItems[i].first_name %></td>
                            <td><%= contactItems[i].last_name %></td>
                            <td><%= contactItems[i].phone_number %></td>
                            <td>
                                <form id="formDelete" action="/delete-contact" method="POST">
                                    <div class="delete-btn">
                                        <input type="hidden" value="<%= contactItems[i].id %>" name="contactDelete">
                                        <button type="submit" class="fas fa-trash-alt"></button>
                                    </div>
                                </form>
                            </td>
                        </tr>
                        <% } %>
                    </tbody>
                </table>

                <a href="/add-contact" class="d-flex justify-content-center">
                    <button class="btn btn-primary submit-button">Add a new Contact</button>
                </a>
            </div>

        </div>
    </div>

    <footer>
        <span class="footer">Jan-Marcus S. &#169 2021</span>
    </footer>
    </div>
</body>

</html>